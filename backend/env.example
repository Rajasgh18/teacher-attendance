# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration (for Drizzle)
DATABASE_URL=postgresql://postgres.[YOUR-PASSWORD]@aws-0-ap-south-1.pooler.supabase.com:6543/postgres

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-at-least-32-characters-long
JWT_REFRESH_EXPIRES_IN=30d
JWT_RESET_SECRET=your-super-secret-reset-key-here-make-it-at-least-32-characters-long

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (if needed)
REDIS_URL=redis://localhost:6379 